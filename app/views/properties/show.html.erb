<h3>Address</h3>
<div class="myAddress">
	<ul>
	  <li><%= @property.street_address %></li>
	  <li><%= @property.suburb %></li>
	  <li><%= @property.state %></li>
	  <li><%= @property.postcode %></li>
	</ul>
</div>

<div class="myReviews">
<h3>Review</h3>
	<ul>
	    <% @property.reviews.each do |review| %>
		  	<li><%= review.comment %></li>
		  	<li><%= review.rating %></li>
	  	<% end %>
  	</ul>
</div>

<% if @current_tenant %>
	<h3>Add New Review</h3>
	<%= form_for "properties", url: "/properties/#{ @property.id }/reviews"  do |f| %>
		<p>
			<%= f.label :comment %>
			<%= f.text_field :comment %>
		</p>
		<p>
			<%= f.label :rating %>
			<%= f.text_field :rating %>
		</p>
		<%= f.submit %>
	<% end %>
<% end %>